<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.a300.gi.a300.RegisterUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"
            android:elevation="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txttop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="Registrate"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="26dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TxtNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bordertxt"
                android:hint="Nombre"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack" />

            <EditText
                android:id="@+id/TxtCorreo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bordertxt"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack" />

            <EditText
                android:id="@+id/TxtContra"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bordertxt"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack" />

            <EditText
                android:id="@+id/TxtContra2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bordertxt"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack" />

            <Spinner
                android:id="@+id/TxtBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bordertxt"></Spinner>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/BtnCargarImagen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/btnIngresar"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/borderbtn"
                                android:backgroundTint="@color/colorAccent"
                                android:text="Cargar\nImagen"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:onClick="oneclick"/>

                            <ImageView
                                android:id="@+id/IdImageView"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                />
                        </LinearLayout>

                        <Button
                            android:id="@+id/BtnCrearUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnIngresar"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/borderbtn"
                            android:backgroundTint="@color/colorAccent"
                            android:text="REGISTRAR"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />


                    </LinearLayout>
                </ScrollView>


            </RelativeLayout>