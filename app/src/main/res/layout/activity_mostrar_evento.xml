<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.a300.gi.a300.MostrarEventoActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/colorWhite"
            android:elevation="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="Evento"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TvMIdEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/TvMNombreEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Nombre del evento"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="22dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/TvTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="Fecha"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="22dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/TvMFechaEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Fecha"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="22dp"
                android:textStyle="normal" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="Direccion"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="22dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/TvMDireccionEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Direccion"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="22dp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="Descripcion"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="22dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/TvMDescripecionEvento"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Descripcion"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textSize="22dp"
            android:textStyle="normal" />



            <Button
                android:id="@+id/BtnDonar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/borderbtn"
                android:backgroundTint="@color/colorAccent"
                android:text="Donar"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />


        </LinearLayout>



</RelativeLayout>